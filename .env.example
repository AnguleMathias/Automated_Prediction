# Server Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/football_betting?schema=public"

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# Sportmonks API (Required - sign up at https://www.sportmonks.com/)
SPORTMONKS_API_KEY=your_sportmonks_api_key_here
SPORTMONKS_API_BASE=https://api.sportmonks.com/v3
SPORTMONKS_RATE_LIMIT_DELAY=2000

# Odds APIs (Add your API keys if using paid services)
ODDS_API_KEY=
ODDS_API_BASE=https://api.the-odds-api.com/v4

# Cron Schedule (Default: Every Friday at 9 AM)
DATA_FETCH_CRON=0 9 * * 5

# Prediction Model Configuration
MIN_CONFIDENCE_THRESHOLD=60
FORM_WEIGHT=0.30
HOME_AWAY_WEIGHT=0.25
HEAD_TO_HEAD_WEIGHT=0.20
INJURY_WEIGHT=0.15
LEAGUE_POSITION_WEIGHT=0.10

# Logging
LOG_LEVEL=info
